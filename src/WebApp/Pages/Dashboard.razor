@page "/"
@page "/dashboard"


@if (RenderPageTitle)
{
  <AppPageTitle Title="@PageTitleText" />
}

<div class="mt-px space-y-4">
  <section class="grid gap-4 xl:grid-cols-2 2xl:grid-cols-3">
    <div class="xl:col-span-2">
      <ChartWidget Title="Sales this week"
                   Subtitle="$45,385"
                   ChangeValue="12.5m"
                   ChangeCaption="vs last week"
                   Series="RevenueSeries"
                   IsDarkMode="_isDarkMode">
        <FooterContent>
          <div class="mt-4 flex flex-col gap-3 border-t border-gray-200 pt-4 text-sm sm:flex-row sm:items-center sm:justify-between sm:pt-6 dark:border-gray-700">
            <div class="text-gray-500 dark:text-gray-300">
              Updated 5 minutes ago
            </div>
            <a href="#"
               class="inline-flex items-center gap-2 rounded-lg border border-gray-200 px-3 py-1.5 text-sm font-medium text-gray-600 hover:bg-gray-50 dark:border-gray-700 dark:text-gray-300 dark:hover:bg-gray-800">
              View reports →
            </a>
          </div>
        </FooterContent>
      </ChartWidget>
    </div>

    <StatisticsCard Products="TopProducts"
                    Customers="TopCustomers"
                    PeriodLabel="Last 7 days"
                    ReportHref="#" />
  </section>

  <section class="grid grid-cols-1 gap-4 xl:grid-cols-2 2xl:grid-cols-3">
    <ProductMetricCard Title="New products"
                       Subtitle="2,340"
                       ChangeValue="12.5m"
                       ChangeCaption="Since last month"
                       Series="ProductQuantitySeries"
                       ChartType="ProductMetricChartType.Quantity"
                       IsDarkMode="_isDarkMode" />

    <ProductMetricCard Title="Users"
                       Subtitle="4,420"
                       ChangeValue="-3.4m"
                       ChangeCaption="Since last month"
                       Series="UserSeries"
                       ChartType="ProductMetricChartType.Users"
                       IsDarkMode="_isDarkMode" />

    <ProductMetricCard Title="Users"
                       Subtitle="4,420"
                       ChangeValue="-3.4m"
                       ChangeCaption="Since last month"
                       Series="UserSeries"
                       ChartType="ProductMetricChartType.Users"
                       Horizontal="true"
                       IsDarkMode="_isDarkMode" />
  </section>

  <section class="grid grid-cols-1 gap-3 xl:grid-cols-2">
    <CategorySalesReport Title="Sales by category"
                         Subtitle="Desktop PC"
                         ChangeValue="2.5m"
                         ChangeCaption="Since last month"
                         Series="CategorySalesSeries"
                         IsDarkMode="_isDarkMode">
      <HeaderContent>
        <Button Color="ButtonColor.Primary" Size="ButtonSize.Small">
          Download report
        </Button>
      </HeaderContent>
      <FooterContent>
        <div class="flex flex-col gap-3 text-gray-500 sm:flex-row sm:items-center sm:justify-between dark:text-gray-300">
          <span>Compare the latest period across all product lines.</span>
          <a href="#"
             class="inline-flex items-center gap-2 text-primary-600 hover:underline dark:text-primary-400">
            View detailed analysis →
          </a>
        </div>
      </FooterContent>
    </CategorySalesReport>

    <TrafficCard Title="Traffic by device"
                 Subtitle="Desktop"
                 SeriesName="Traffic share"
                 Slices="TrafficSlices"
                 IsDarkMode="_isDarkMode">
      <BodyContent>
        <div class="grid grid-cols-1 gap-3 text-sm sm:grid-cols-3">
          @foreach (var device in Devices)
          {
            <div class="rounded-lg border border-gray-200 p-3 dark:border-gray-700">
              <div class="text-xs uppercase text-gray-500 dark:text-gray-400">@device.Name</div>
              <div class="mt-1 text-xl font-semibold text-gray-900 dark:text-white">@device.Value</div>
              <div class="@($"mt-1 text-xs {device.ChangeCss}")">@device.ChangeText</div>
            </div>
          }
        </div>
      </BodyContent>
      <FooterContent>
        <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-300">
          <span>Source: Internal analytics</span>
          <a href="#"
             class="inline-flex items-center gap-2 text-primary-600 hover:underline dark:text-primary-400">
            Full report →
          </a>
        </div>
      </FooterContent>
    </TrafficCard>
  </section>

  <section class="grid grid-cols-1 gap-4 xl:grid-cols-2">
    <ActivityList Title="Latest Activity">
      <ActionContent>
        <a href="#top"
           class="inline-flex items-center rounded-lg p-2 text-sm font-medium text-primary-700 hover:bg-gray-100 dark:text-primary-500 dark:hover:bg-gray-700">
          View all
        </a>
      </ActionContent>

      <ChildContent>
        <Timeline Order="TimelineOrder.Activity">
          <TimelineItem Title="Application UI design in Figma"
                        Date="April 2025">
            <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-300">
              Get access to over 20+ pages including a dashboard layout, charts, kanban board, calendar, and pre-order E-commerce &amp; Marketing pages.
            </p>
            <Button Color="ButtonColor.Light" Size="ButtonSize.Small">
              Learn more
              <AngleRightIcon Class="ms-2 h-4 w-4" />
            </Button>
          </TimelineItem>

          <TimelineItem Title="Marketing UI code in Flowbite"
                        Date="March 2025">
            <p class="text-base font-normal text-gray-500 dark:text-gray-300">
              Get started with dozens of web components and interactive elements built on top of Tailwind CSS.
            </p>
            <a href="#top"
               class="inline-flex items-center text-xs font-medium text-primary-700 hover:underline sm:text-sm dark:text-primary-500">
              Go to Flowbite Blocks
              <AngleRightIcon Class="ms-2 h-4 w-4" />
            </a>
          </TimelineItem>

          <TimelineItem Title="Marketing UI design in Figma"
                        Date="February 2025"
                        IsLast="true">
            <p class="text-base font-normal text-gray-500 dark:text-gray-300">
              Get started with dozens of web components and interactive elements built on top of Tailwind CSS.
            </p>
          </TimelineItem>
        </Timeline>
      </ChildContent>
    </ActivityList>
  </section>
</div>
