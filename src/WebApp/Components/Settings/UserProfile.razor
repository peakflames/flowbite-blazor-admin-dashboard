@using Flowbite.Components

<Card Size="CardSize.ExtraLarge" class="shadow-sm p-4 sm:p-6">
    <div class="flex flex-col space-y-2 md:space-y-0 md:flex-row md:space-x-4 md:items-start">
        <Avatar Size="AvatarSize.Large" ImageUrl="@Src" Alt="User avatar" Rounded="true" />
        <div class="flex flex-col ">
            <div class="flex flex-col">
                <h3 class="mb-1 text-xl font-medium text-gray-900 dark:text-white">
                    @Title
                </h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    @Subtitle
                </p>
            </div>

            @if (ChildContent != null)
            {
                <div class="mt-4 w-full">
                    @ChildContent
                </div>
            }
        </div>
    </div>
</Card>

@code {
    [Parameter]
    public string Src { get; set; } = "";

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? Subtitle { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
